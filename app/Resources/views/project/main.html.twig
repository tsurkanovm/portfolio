<section class="latest section">
    <div class="section-inner">
        <h2 class="heading">My Symfony projects</h2>
        <div class="content">
            {% for project in projects %}
                <div class="item row">
                    <a class="col-md-4 col-sm-4 col-xs-12" href="{{ path('project', {'id':project.id}) }}">
                        {#<img class="img-responsive project-image" src="{{ vich_uploader_asset(project.imageLogo, 'uploadedFile') }}"#}
                        {#alt="{{ project.name }}"/>#}
                    </a>
                    <div class="desc col-md-8 col-sm-8 col-xs-12">
                        <h3 class="title">{{ project.name }}</a></h3>
                        <p>{{ project.challenge | raw }}</p>
                        <p><a class="more-link" href="{{ path('project', {'id':project.id}) }}" target="_blank"><i
                                        class="fa fa-external-link"></i> Find out
                                more</a></p>
                    </div><!--//desc-->
                </div><!--//item-->
            {% endfor %}
        </div><!--//content-->
    </div><!--//section-inner-->
</section><!--//section-->
