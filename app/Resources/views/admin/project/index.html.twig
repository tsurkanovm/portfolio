{% extends 'admin/admin_base.html.twig' %}

{% set routeName = 'admin_project_list' %}
{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right" style="margin-bottom: 10px; margin-top: 20px;">
                <a href="{{ path('admin_project_add') }}" class="btn btn-primary outline">Add <span
                            class="fa fa-plus-circle"></span></a>
            </div>

            <h1>Projects</h1>

            <table class="table table-bordered table-hover">
                <tr>
                    <th>NAME</th>
                    <th>DESCRIPTION</th>
                    <th>SHOW</th>
                    <th>&nbsp;</th>
                </tr>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.name }}</td>
                        <td>{{ project.description }}</td>
                        <td>{{ project.displayOnHome }}</td>
                        <td>
                            <a href="{{ path('admin_project_edit', {'id': project.id}) }}"
                               class="btn btn-xs btn-success"><span class="glyphicon glyphicon-pencil"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            {% include "admin/admin_paginator.html.twig" %}
        </div>
    </div>
{% endblock %}
