{% extends 'KnpMenuBundle::menu.html.twig' %}

{% block list %}
    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        {% import _self as knp_menu %}
        <ol class="nav nav-pills nav-stacked">
            {{ block('children') }}
        </ol>
    {% endif %}
{% endblock %}
